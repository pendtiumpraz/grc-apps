# Backend Dockerfile
FROM golang:1.21-alpine

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the application
RUN go build -o komplai-backend cmd/server/main.go

# Expose port
EXPOSE 8080

# Run the application
CMD ["./komplai-backend"]